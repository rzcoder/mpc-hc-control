{
  "compilerOptions": {
    "target": "es2016",
    "outDir": "lib",
    "sourceMap": false,
    "declaration": true,
    "pretty": true,
    "strictNullChecks": false,
    "module": "commonjs",
    "moduleResolution": "node",
    "removeComments": false,
    "lib": [
      "es6",
      "dom"
    ]
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "",
    "lib"
  ]
}